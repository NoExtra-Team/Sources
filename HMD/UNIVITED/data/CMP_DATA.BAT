@echo off
@cls
REM -------------------------------------
REM -*- NOEXTRA COMPRESSION DATA KIT  -*-
REM -------------------------------------
set FOLDER-GFX=..\_gfx\
set FOLDER-BIN=..\_bin\
set FOLDER-DATA=.\
@echo off
del %FOLDER-DATA%GREGHMD.LZ4 2>NUL
@echo on
REM --- PANDAFOX PICTURE ---
%FOLDER-BIN%cut_pi1.exe %FOLDER-GFX%GREGHMD.PI1 %FOLDER-DATA%GREGHMD.IMG 0 200
%FOLDER-BIN%lz4.exe -9 -zq %FOLDER-DATA%GREGHMD.IMG %FOLDER-DATA%GREGHMD.LZ4
@echo off
del %FOLDER-DATA%GREGHMD.IMG 2>NUL
del %FOLDER-DATA%HMDLOGO.IMG 2>NUL
@echo on
REM --- DIEU PICTURE ---
%FOLDER-BIN%cut_pi1.exe %FOLDER-GFX%HMDLOGO.PI1 %FOLDER-DATA%HMDLOGO.IMG 0 87
@echo off
del %FOLDER-DATA%BACK.LZ4 2>NUL
@echo on
REM --- MISTER.A PICTURE ---
%FOLDER-BIN%cut_pi1.exe %FOLDER-GFX%BACK.PI1 %FOLDER-DATA%BACK.IMG 0 6
%FOLDER-BIN%lz4.exe -9 -zq %FOLDER-DATA%BACK.IMG %FOLDER-DATA%BACK.LZ4
@echo off
del %FOLDER-DATA%BACK.IMG 2>NUL
del %FOLDER-DATA%REFLETM.IMG 2>NUL
@echo on
REM --- DIEU PICTURE ---
%FOLDER-BIN%cut_pi1.exe %FOLDER-GFX%REFLETM.PI1 %FOLDER-DATA%REFLETM.IMG 0 89
@echo off
del %FOLDER-DATA%SPECTRUM.LZ4 2>NUL
@echo on
REM --- JADE PICTURE ---
%FOLDER-BIN%cut_pi1.exe %FOLDER-GFX%SPECTRUM.PI1 %FOLDER-DATA%SPECTRUM.IMG 0 113
%FOLDER-BIN%lz4.exe -9 -zq %FOLDER-DATA%SPECTRUM.IMG %FOLDER-DATA%SPECTRUM.LZ4
@echo on
del %FOLDER-DATA%SPECTRUM.IMG 2>NUL
@echo off
